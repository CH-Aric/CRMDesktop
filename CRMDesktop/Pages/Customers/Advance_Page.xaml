<Page x:Class="CRMDesktop.Pages.Customers.Advance_Page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRMDesktop.Pages.Customers"
        mc:Ignorable="d"
        Title="Advance_Page" Height="450" Width="800">
    <Grid Background="Black" x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Rectangle Fill="White" Grid.Row="0" Grid.Column="0" Margin="2"/>
        <Rectangle Fill="White" Grid.Row="0" Grid.Column="1" Margin="2"/>
        <Label Content="NameHere" x:Name="nameLabel" />
        <Label Content="StageHere" x:Name="stageLabel" Grid.Column="1"/>


        <Rectangle Fill="White" Grid.Row="1" Grid.Column="0" Margin="2"/>
        <Rectangle Fill="White" Grid.Row="1" Grid.Column="1" Margin="2"/>
        <Label Content="Advance To:" Grid.Row="1"  Grid.Column="0"/>
        <Label Content="Ready?" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Page>
