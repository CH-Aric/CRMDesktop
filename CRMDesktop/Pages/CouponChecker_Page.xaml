<Page x:Class="CRMDesktop.Pages.CouponChecker_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CRMDesktop.Pages"
      xmlns:local1="clr-namespace:CRMDesktop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CouponChecker_Page">

    <StackPanel Orientation="Vertical">
        <Label Content="Enter the Coupon to check!"/>
        <TextBox x:Name="CouponEntry"/>
        <local1:StyledButton Click="onClickCheck" Content="Check Coupon"/>
        <Label Content="Details:" x:Name="detailDisplay" />
    </StackPanel>
</Page>
