<Window x:Class="CRMDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRMDesktop"
        mc:Ignorable="d"
        Title="CoolHeat CRM"
        WindowState="Maximized">
    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="\\CH-FILESERVER\Root\Files\Marketing\Resources\background.png"/>
        </StackPanel.Background>
        <Frame x:Name="topFrame" Height="50"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

            <Frame x:Name="sideFrame" Width="150" Height="100"/>
            <Frame x:Name="mainFrame" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="72"/>
        </StackPanel>
    </StackPanel>
</Window>
